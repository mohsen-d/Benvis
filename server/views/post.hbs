<main>
  <header>
    <div
      class="d-flex align-items-start align-items-sm-center flex-column flex-sm-row"
    >
      <a
        href="/posts"
        class="back-link d-block d-sm-inline text-body-tertiary fs-4 pe-sm-2 mb-2 mb-sm-0"
      >
        <i class="bi bi-box-arrow-in-left"></i>
      </a>
      <h3 class="post-title">{{title}}</h3>
    </div>
    <div class="text-body-tertiary fs-6">
      <i class="bi bi-calendar4-week"></i>
      <time datetime="{{date}}">{{date}}</time>
    </div>
  </header>
  <section class="post-content lh-lg mt-4 fs-6 fw-light">
    {{{content}}}
  </section>
</main>